{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/Applications/Godot_mono.app/Contents/MacOS/Godot",
            "type": "process",
            "args": [
                "--path",
                "${workspaceFolder}",
                "--headless",
                "--build-solutions",
                "--quit-after",
                "2000"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build and run",
            "type": "shell",
            "dependsOn": "build",
            "command": "/Applications/Godot_mono.app/Contents/MacOS/Godot",
            "args": [
                "--path",
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/stg.csproj"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "export debug",
            "command": "/Applications/Godot_mono.app/Contents/MacOS/Godot",
            "type": "process",
            "args": [
                "--path",
                "${workspaceFolder}",
                "--headless",
                "--export-debug",
                "Mac OSX",
                "${workspaceFolder}/build/stg.app"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}